<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/spacing_max"
    android:background="@color/colorWidely"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/spacing_more"
        >

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/iconView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/spacing_medium"
            android:paddingRight="@dimen/spacing_medium"
            android:text="提醒"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_max"
            android:textStyle="bold"
            android:lineSpacingExtra="@dimen/textSpacing_max"
            />

        <TextView
            android:id="@+id/contentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/spacing_medium"
            android:paddingRight="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="立即充值,只有充值才能变得更强"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_more"
            android:lineSpacingExtra="@dimen/textSpacing_more"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/spacing_less"
        android:showDividers="middle"
        android:paddingLeft="@dimen/spacing_medium"
        android:paddingRight="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        >

            <EditText
                android:id="@+id/edit_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_less"
                android:background="@drawable/rect_radiusless_solidbackground"
                android:layout_gravity="center"
                android:textSize="@dimen/text_medium"
                android:maxLines="1"
                />

            <EditText
                    android:id="@+id/edit_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_less"
                    android:background="@drawable/rect_radiusless_solidbackground"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_medium"
                    android:maxLines="1"
                    />

            <EditText
                    android:id="@+id/edit_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_less"
                    android:background="@drawable/rect_radiusless_solidbackground"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_medium"
                    android:maxLines="1"
                    />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:divider="@drawable/line_primary"
        android:showDividers="middle"
        >

        <Button
            android:id="@+id/negativeView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="停止充值"
            android:padding="@dimen/spacing_min"
            android:background="@drawable/press_layer_rect_topprimary_solidwidely"
            android:textSize="@dimen/text_more"
            android:textColor="@color/colorPrimary"
            />

        <Button
            android:id="@+id/neutralView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="只能选两边"
            android:padding="@dimen/spacing_min"
            android:background="@drawable/press_layer_rect_topprimary_solidwidely"
            android:textSize="@dimen/text_more"
            android:textColor="@color/colorPrimary"
            />

        <Button
            android:id="@+id/positiveView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="立即充值"
            android:padding="@dimen/spacing_min"
            android:background="@drawable/press_layer_rect_topprimary_solidwidely"
            android:textSize="@dimen/text_more"
            android:textColor="@color/colorPrimary"
            />

    </LinearLayout>

</LinearLayout>