<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWidely"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/spacing_max"
        android:layout_marginBottom="@dimen/spacing_more"
        >

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/iconView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="@dimen/spacing_medium"
            android:paddingRight="@dimen/spacing_medium"
            android:text="提醒"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_max"
            android:textStyle="bold"
            android:lineSpacingExtra="@dimen/textSpacing_max"
            />

        <TextView
            android:id="@+id/contentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/spacing_medium"
            android:paddingRight="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="立即充值,只有充值才能变得更强"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_more"
            android:lineSpacingExtra="@dimen/textSpacing_more"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:divider="@drawable/line_primary"
        android:showDividers="middle"
        android:background="@drawable/layer_rect_topprimary_solidtransparent"
        >

            <TextView
                android:id="@+id/negativeView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/spacing_less"
                android:text="停止充值"
                android:background="@drawable/press_rect_solidtransparent"
                android:textSize="@dimen/text_more"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:id="@+id/neutralView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/spacing_less"
                android:text="只能选两边"
                android:background="@drawable/press_rect_solidtransparent"
                android:textSize="@dimen/text_more"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:id="@+id/positiveView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/spacing_less"
                android:text="立即充值"
                android:background="@drawable/press_rect_solidprimary"
                android:textSize="@dimen/text_more"
                android:textColor="@color/colorWidely"
                />

    </LinearLayout>

</LinearLayout>