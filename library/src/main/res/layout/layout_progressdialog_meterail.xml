<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/distance_more"
    android:paddingLeft="@dimen/distance_max"
    android:paddingRight="@dimen/distance_more"
    android:paddingTop="@dimen/distance_max"
    android:background="@color/colorWidely"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/iconView"
            android:layout_width="@dimen/icon_medium_both"
            android:layout_height="@dimen/icon_medium_both"
            android:layout_marginRight="@dimen/distance_more"
            android:src="@drawable/shape_solidbackground"
            />

        <TextView
            android:id="@+id/titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="立即充值"
            android:lineSpacingExtra="@dimen/textspacing_less"
            android:textColor="@color/text_strong"
            android:textSize="@dimen/text_max"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_less"
        android:gravity="left"
        android:lineSpacingExtra="@dimen/textspacing_min"
        android:text="是的只有充钱才能变得更强"
        android:textColor="@color/text_normal"
        android:textSize="@dimen/text_medium" />

    <ProgressBar
        android:id="@+id/progressView"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="@dimen/distance_xmax"
        android:progressDrawable="@drawable/progress_radiusmedium_solidprimary"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        />

</LinearLayout>