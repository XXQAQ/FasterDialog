<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWidely"
    >

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/spacing_less"
        android:showDividers="beginning|middle|end"
        >

        <TextView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/spacing_more"
            android:paddingRight="@dimen/spacing_more"
            android:gravity="center"
            android:text="提醒"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_more"
            android:textStyle="bold"
            android:lineSpacingExtra="@dimen/textSpacing_more"
            />

        <TextView
            android:id="@+id/contentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/spacing_more"
            android:paddingRight="@dimen/spacing_more"
            android:gravity="center"
            android:text="立即充值,只有充值才能变得更强"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_medium"
            android:lineSpacingExtra="@dimen/textSpacing_medium"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing_more"
        android:paddingRight="@dimen/spacing_more"
        android:layout_gravity="right"
        android:divider="@drawable/spacing_medium"
        android:showDividers="middle"
        >

        <TextView
            android:id="@+id/negativeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_min"
            android:text="取消"
            android:textColor="@color/press_text_normal" />

        <TextView
            android:id="@+id/neutralView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_min"
            android:text="中立"
            android:textColor="@color/press_text_normal" />

        <TextView
            android:id="@+id/positiveView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_min"
            android:text="确认"
            android:textColor="@color/press_text_primary" />

    </LinearLayout>

</LinearLayout>