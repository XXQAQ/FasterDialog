<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/widely"
    >

    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/distance_xlarge"
        android:layout_marginLeft="@dimen/distance_xlarge"
        android:layout_marginRight="@dimen/distance_xlarge"
        android:layout_marginBottom="@dimen/distance_more"
        android:text="提醒"
        android:textColor="?colorPrimary"
        android:textSize="@dimen/text_large"
        android:textStyle="bold"
        android:lines="1"
        />

    <TextView
        android:id="@+id/contentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance_xlarge"
        android:layout_marginRight="@dimen/distance_xlarge"
        android:layout_marginBottom="@dimen/distance_large"
        android:gravity="center"
        android:text="立即充值,只有充值才能变得更强"
        android:textColor="@color/text_normal"
        android:textSize="@dimen/text_more"
        android:lineSpacingExtra="8dp"
        />

    <ProgressBar
        android:layout_width="@dimen/icon_xxlarge_both"
        android:layout_height="@dimen/icon_xxlarge_both"
        android:layout_marginBottom="@dimen/distance_large"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>