<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/spacing_medium"
    android:paddingLeft="@dimen/spacing_more"
    android:paddingRight="@dimen/spacing_medium"
    android:paddingTop="@dimen/spacing_more"
    android:background="@color/colorWidely"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/spacing_min"
        >

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/iconView"
            android:layout_width="@dimen/icon_medium"
            android:layout_height="@dimen/icon_medium"
            android:layout_marginRight="@dimen/spacing_medium"
            />

        <TextView
            android:id="@+id/titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="立即充值"
            android:lineSpacingExtra="@dimen/textSpacing_max"
            android:textColor="@color/text_strong"
            android:textSize="@dimen/text_max"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_min"
        android:gravity="left"
        android:lineSpacingExtra="@dimen/textSpacing_medium"
        android:text="是的只有充钱才能变得更强"
        android:textColor="@color/text_normal"
        android:textSize="@dimen/text_medium"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:divider="@drawable/spacing_xmin"
        android:showDividers="middle"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/edit_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_less"
            android:layout_gravity="left"
            android:textSize="@dimen/text_medium"
            android:maxLines="1"
            />

        <EditText
            android:id="@+id/edit_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_less"
            android:layout_gravity="left"
            android:textSize="@dimen/text_medium"
            android:maxLines="1"
            />

        <EditText
            android:id="@+id/edit_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_less"
            android:layout_gravity="left"
            android:textSize="@dimen/text_medium"
            android:maxLines="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <TextView
            android:id="@+id/negativeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_min"
            android:layout_marginRight="@dimen/spacing_medium"
            android:text="取消"
            android:textColor="@color/press_text_normal" />

        <TextView
            android:id="@+id/neutralView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_medium"
            android:gravity="center"
            android:padding="@dimen/spacing_min"
            android:text="中立"
            android:textColor="@color/press_text_normal" />

        <TextView
            android:id="@+id/positiveView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_min"
            android:text="确认"
            android:textColor="@color/press_text_primary" />

    </LinearLayout>

</LinearLayout>