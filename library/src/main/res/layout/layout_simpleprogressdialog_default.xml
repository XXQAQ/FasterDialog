<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/distance_xmax"
    android:gravity="center_horizontal"
    android:background="@color/colorWidely"
    >

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/iconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/distance_min"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/distance_more"
        android:paddingRight="@dimen/distance_more"
        android:layout_marginBottom="@dimen/distance_more"
        android:text="提醒"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_max"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/distance_more"
        android:paddingRight="@dimen/distance_more"
        android:layout_marginBottom="@dimen/distance_more"
        android:gravity="center"
        android:text="立即充值,只有充值才能变得更强"
        android:textColor="@color/text_normal"
        android:textSize="@dimen/text_more"
        android:lineSpacingExtra="8dp"
        />

    <ProgressBar
        android:layout_width="@dimen/icon_xxmax_both"
        android:layout_height="@dimen/icon_xxmax_both"
        android:layout_marginTop="@dimen/distance_less"
        android:layout_marginBottom="@dimen/distance_more"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>