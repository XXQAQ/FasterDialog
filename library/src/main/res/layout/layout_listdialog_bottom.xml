<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/colorBackground"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/spacing_less"
        android:showDividers="beginning|middle"
        >

        <TextView
            android:id="@+id/negativeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_less"
            android:text="停止充值"
            android:background="@drawable/press_rect_solidtransparent"
            android:textSize="@dimen/text_more"
            android:textColor="@color/text_strong"
            />

        <TextView
            android:id="@+id/neutralView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_less"
            android:text="只能选两边"
            android:background="@drawable/press_rect_solidtransparent"
            android:textSize="@dimen/text_more"
            android:textColor="@color/text_strong"
            />

        <TextView
            android:id="@+id/positiveView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_less"
            android:text="立即充值"
            android:background="@drawable/press_rect_solidtransparent"
            android:textSize="@dimen/text_more"
            android:textColor="@color/text_strong"
            />

    </LinearLayout>

</LinearLayout>