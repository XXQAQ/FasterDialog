<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/distance_more"
    android:paddingBottom="@dimen/distance_more"
    android:paddingLeft="@dimen/distance_large"
    android:paddingRight="@dimen/distance_large"
    android:background="@color/highlight"

    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pressed_radiuslarge_solidwhite"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progressView"
                android:layout_width="@dimen/icon_less_both"
                android:layout_height="@dimen/icon_less_both"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/loadingView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/text_medium"
                android:text="正在加载..." />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
