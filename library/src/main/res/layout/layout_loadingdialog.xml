<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/distance_more"
    android:paddingBottom="@dimen/distance_more"
    android:paddingLeft="@dimen/distance_max"
    android:paddingRight="@dimen/distance_max"
    android:background="@drawable/rect_radiusless_solidblackglass"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progressView"
            android:layout_width="@dimen/icon_xmedium_both"
            android:layout_height="@dimen/icon_xmedium_both"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/distance_less"
            />

        <TextView
            android:id="@+id/loadingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_medium"
            android:textColor="@android:color/white"
            android:text="@string/loading" />

    </LinearLayout>

</LinearLayout>
