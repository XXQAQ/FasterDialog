<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/colorBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/spacing_less"
        android:showDividers="beginning|middle|end"
        android:background="@drawable/layer_rect_bottomdivider_solidwidely"
        >

        <TextView
            android:id="@+id/titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="@dimen/spacing_medium"
            android:paddingRight="@dimen/spacing_medium"
            android:text="提醒"
            android:textColor="@color/text_strong"
            android:textSize="@dimen/text_more"
            android:textStyle="bold"
            android:lineSpacingExtra="@dimen/textSpacing_more"
            />

        <TextView
            android:id="@+id/contentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/spacing_medium"
            android:paddingRight="@dimen/spacing_medium"
            android:text="立即充值,只有充值才能变得更强"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_medium"
            android:lineSpacingExtra="@dimen/text_medium"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/spacing_less"
        android:showDividers="beginning|middle"
        >

        <TextView
            android:id="@+id/positiveView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_less"
            android:text="立即充值"
            android:background="@drawable/press_rect_solidwidely"
            android:textSize="@dimen/text_more"
            android:textColor="@color/text_strong"
            />

        <TextView
            android:id="@+id/negativeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_less"
            android:text="停止充值"
            android:background="@drawable/press_rect_solidwidely"
            android:textSize="@dimen/text_more"
            android:textColor="@color/text_strong"
            />

    </LinearLayout>

</LinearLayout>